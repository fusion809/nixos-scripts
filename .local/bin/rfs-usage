#!/usr/bin/env bash
space() {
	if df -T / | grep -i btrfs > /dev/null 2>&1 ; then
		USED=$(sudo btrfs fi show | head -n 3 | grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn} "devid" | cut -d ' ' -f 9 | sed 's/GiB//g')
		TOTAL=$(sudo btrfs fi show | head -n 3 | grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn} "devid" | cut -d ' ' -f 7 | sed 's/GiB/G/g')
	elif df -T / | grep -i ext4 > /dev/null 2>&1 ; then
		USED=$(df -h --output=used / | tail -n 1 | xargs echo | sed 's/G//g')
		TOTAL=$(df -h --output=size / | tail -n 1 | xargs echo)
	fi
	printf "${USED}/${TOTAL}"
}

printf "/ $(space)\n"
